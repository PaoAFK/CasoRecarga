('Ruth Tarqui',22,'2012-1-01', 0),
('Antonio Torres',55,'2012-1-01',0);

create table recarga(
  id int auto_increment primary key,
  idJugador int,
  banco varchar(100),
  medio varchar(100),
  fecha date,
  monto double
);

/*INSERT INTO recarga(idJugador, banco, medio, fecha, monto) VALUES 
