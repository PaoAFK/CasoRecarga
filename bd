create database CPRecarga;
use CPRecarga;

create table jugador(
  id int auto_increment primary key,
  nombre varchar(100),
  edad int,
  fecha date,
  saldo double
);

INSERT INTO jugador(nombre, edad, fecha, saldo) VALUES 
